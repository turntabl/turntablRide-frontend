#:kivy 2.1.0
#:import Factory kivy.factory.Factory

<Loading>:
    title: ""
    size_hint_x: None
    size_hint_y: None
    width: "250dp"
    type: "custom"
    auto_dismiss: False
    content_cls: Factory.Content()


<Content@BoxLayout>:
    orientation: "vertical"
    size_hint_y: None
    height: "90dp"

    AnchorLayout:
        MDSpinner:
            size_hint: None, None
            size: dp(30), dp(30)
            pos_hint: {'center_x': .5, 'center_y': .5}
    
    AnchorLayout:
        MDLabel:
            text: "Logging in..."
            halign: "center"