<CardLabel@MDLabel>:
    font_name: "jakarta"
    bold: True
    adaptive_height: True

<AddingRidersScreen>:
    MapView:

    MDBoxLayout:
        size_hint: 1, .1
        padding: dp(10), dp(16), dp(10), 0
        pos_hint: {"top": 1}
        
        MDIconButton: # change the opacity
            icon: "arrow-left"
            size_hint: None, None
            icon_size: sp(30)
            md_bg_color: (1, 1, 1, .6)
            opacity: 1

        MDWidget:

        MDIconButton:
            icon: "dots-vertical"
            pos_hint: {"right": 1}
            md_bg_color: rgba(1, 1, 1, 0)
            icon_size: sp(30)
            opacity: 1

    MDBoxLayout:
        size_hint: 1, None
        height: dp(264)

        MDCard:
            height: self.parent.height
            padding: dp(22), dp(5), dp(22), dp(5)
            spacing: dp(7)
            
            CardLabel:
                text: 
                    "You are riding with 4 others.\n" \
                    "They would be notified once you confirm."
                color: "#808081"
                halign: "center"

            CardLabel:
                text: "Kelvin Mills" # possibly we will change this later
                adaptive_size: True
                font_size: dp(18)
                pos_hint: {"x": .02}

            MDBoxLayout:
                line_color: app.COLORS.BlueColor["TextColor"]
                line_width: 1
                size_hint: 1, None
                height: dp(81)
                pos_hint: {"x": .02, "y": .1}
                radius: dp(10)

                MDBoxLayout:
                    padding: dp(10)
                    orientation: "vertical"
                    spacing: dp(12)

                    MDFloatLayout:
                        spacing: dp(7)

                        MDIcon:
                            icon: "radiobox-marked"
                            theme_text_color: "Custom"
                            text_color: "#0184ff"
                            pos_hint: {"x": 0.02, "center_y": .5}
                            font_size: dp(16)
                        CardLabel:
                            text: "Start Location"
                            pos_hint: {"x": .15, "center_y": .5}
                            font_name: "assets/fonts/PlusJakartaSans-Medium.ttf"
                            color: "#7d7c7d"
                            canvas:
                                Color:
                                    rgba: (207/255,208/255,208/255, 1)
                                Line:
                                    points: (64, 116, 316, 116)
                                    width: .5

                    MDFloatLayout:
                        spacing: dp(7)

                        MDIcon:
                            icon: "map-marker"
                            theme_text_color: "Custom"
                            text_color: app.COLORS.RedColor["TextColor"] 
                            pos_hint: {"x": 0.02, "center_y": .5}
                            font_size: dp(16)
                        CardLabel:
                            text: "End Location"
                            font_name: "assets/fonts/PlusJakartaSans-Medium.ttf"
                            color: "#7d7c7d"
                            pos_hint: {"x": .15, "center_y": .5}

            MDBoxLayout:
                spacing: dp(30)
                padding: dp(0), dp(5), dp(0), dp(15)
                Button:
                    text: "[b]Add User to Ride[/b]"
                    font_name: "jakarta"
                    font_size: dp(17)
                    size_hint: None, None
                    size: dp(151), dp(40)
                    markup: True
                    background_color: (0, 0, 0, 0)
                    background_normal: ""
                    canvas.before:
                        Color:
                            rgba: (66/255,132/255,245/255,1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [10]
                
                Button:
                    text: "[b]Done[/b]"
                    font_name: "jakarta"
                    markup: True
                    background_color: (0, 0, 0, 0)
                    font_size: dp(17)
                    background_normal: ""
                    size_hint_y: None
                    height: dp(40)
                    canvas.before:
                        Color:
                            rgba: (66/255,132/255,245/255,1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [10]

