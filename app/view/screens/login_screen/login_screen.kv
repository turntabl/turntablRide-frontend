<LoginScreen>:
    md_bg_color: app.COLORS.WhiteColor.get("BackgroundColor")
    BoxLayout:
        orientation: "vertical"
        spacing: dp(30)
        padding: dp(41)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint_x: None
        width: dp(400)

        MDLabel:
            text: "turntablRide"
            color: 0, 0, 0
            font_size: 35
            size_hint_y: None
            height: dp(10)
            halign: "center"
            font_name: "jakarta"

        Image:
            source: "assets/images/landing_big.png"
            size_hint_y: 0.6
            border: app.COLORS.WhiteColor.get("BackgroundColor")
            background_normal: app.COLORS.WhiteColor.get("BackgroundColor")

        MDFillRoundFlatIconButton:
            id: login_with_google_btn
            text: "  Login with Google"
            icon: "assets/images/google_icon.png"
            md_bg_color: app.COLORS.BlueColor.get("BackgroundColor")
            line_color: 0, 0, 0, 0
            text_color: app.COLORS.WhiteColor.get("BackgroundColor")
            on_press: root.controller.verify_user()
            size: dp(295), dp(0)
            pos_hint: {"center_x": 0.5}
