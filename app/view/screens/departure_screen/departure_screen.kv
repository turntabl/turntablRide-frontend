<MDRectangleFlatButton>:
    markup: True
    font_size: 20

<DepartureScreen>:
    departure: departure

    MDFloatLayout:
        MapView:
            id: mapview
            pos_hint: {"top": 1, "left": 1}
            size_hint: (1, 1)
            z: -1

        MDIconButton:
            id: back_btn
            pos_hint: {"top": 0.99, "right": 0.15}
            icon: "arrow-left"

        MDIconButton:
            id: menu_btn
            icon: "dots-vertical"
            pos_hint: {"top": 0.99, "right": 0.99}


    MDFloatLayout:
        spacing: "10dp"
        MDCard:
            height: 260
            spacing: "20dp"
            MDLabel:
                text: "[b]Set-Off Time[/b]"
                markup: True
            MDRectangleFlatButton:
                text: "[b]17:30[/b]"
            MDTextField:
                id: departure
                icon_left: "alarm"
                hint_text: "HH:MM:SS"
                validator: "time"
                helper_text: "Max Waiting Time"
                mode: "rectangle"
            MDRectangleFlatButton:
                text: "[b]Confirm[/b]"
