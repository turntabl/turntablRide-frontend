<CarRegistrationScreenContent>:
    car_registration_number: car_registration_number
    car_capacity: car_capacity
    driving_car_btn: driving_car_btn
    not_driving_car_btn: not_driving_car_btn
    MDFloatLayout:
        MapView:
            pos_hint: {"top": 1}
            size_hint: 1, 1
            id: mapview
            z: -1

        MDIconButton:
            pos_hint: {"top": 0.99, "right": .15}
            id: back_btn
            icon: "arrow-left"
            on_press: 
                # app.root.current = "_destination_screen"
                # app.root.manager.transition.direction = "left"

        MDIconButton:
            id: menu_btn
            icon: "dots-vertical"
            pos_hint: {"top": 0.99, 'right': .99}


        MDCard:
            height: 300
            MDGridLayout:
                orientation: "lr-tb"
                rows: 5
                spacing: "18dp"

                MDLabel:
                    id: label1
                    text: "Are you driving?"
                    size_hint_y: None
                    height: self.texture_size[1] + 2*self.padding[1]
                MDGridLayout:
                    cols: 2
                    orientation: "lr-tb"
                    spacing: 30
                    height: "40dp"

                    MDRectangleFlatButton:
                        id: driving_car_btn
                        size_hint_x: 1
                        text: "Yes"
                        md_bg_color: "#4285F4"
                        line_color: "#4285F4"
                        text_color: "#FFFFFF"
                        on_press: root.activate_is_driving_fields()

                    MDRectangleFlatButton:
                        id: not_driving_car_btn
                        size_hint_x: 1
                        text: "No"
                        md_bg_color: "#F0F1F1"
                        line_color: "#F0F1F1"
                        text_color: "#000000"
                        on_press: root.activate_is_not_driving_fields()

                MDTextField:
                    id: car_registration_number
                    hint_text: "Your car registration number"
                    mode: "fill"
                    line_color_normal: "#4285F4"
                    line_color_focus: "#4285F4"
                    max_height: "50dp"
                    font_size: 14.0
                    radius: [10, 10, 10, 10]

                MDTextField:
                    id: car_capacity
                    hint_text: "Car capacity"
                    mode: "fill"
                    line_fill_color: "#4285F4"
                    line_color_focus: "#4285F4"
                    max_height: "50dp"
                    font_size: 14.0
                    radius: [10, 10, 10, 10]
                    input_filter: 'int'

                MDRectangleFlatButton:
                    id: car_details_next_btn
                    size_hint_x: 1
                    text: "Next"
                    md_bg_color: "#4285F4"
                    line_color: "#4285F4"
                    text_color: "white"
                    on_press:
                        app.root.current = "_car_registration_screen"  if  root.get_car_details()["status"]=="error" and root.IS_DRIVING else "_pickup_location_screen"
                        #response = root.get_car_details() if root.IS_DRIVING else print("Hello") #{"status": ""}
                        #Snackbar(text= response["message"] , bg_color= app.COLORS.ErrorColor.get("BackgroundColor"), font_size= "14sp").open() if  response["status"]=="error" else  app.root.current == "pickup_and_destination_screen"










