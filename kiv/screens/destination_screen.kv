<DestinationScreenContent>:
    destination: destination

    MDFloatLayout:
        MapView:
            pos_hint: {"top": 1}
            size_hint: 1, 1
            id: mapview
            z: -1


        MDIconButton:
            id: menu_btn
            icon: "dots-vertical"
            pos_hint: {"top": 0.99, 'right': .99}





    MDFloatLayout:
        MDCard:
            height: 220
            spacing: "15dp"
            MDLabel:
                id: label1
                text: "Where are going to?"
                size_hint_y: None
                height: self.texture_size[1] + 2*self.padding[1]
            MDCard:
                size_hint: 1, 1
                size: "291dp", "81dp"
                line_color: app.COLORS.BlueColor.get("BackgroundColor")
                md_bg_color: app.COLORS.GreyColor.get("BackgroundColor")
                radius: [10, 10, 10, 10]
                height: destination.height
                MDTextField:
                    id: destination
                    hint_text: "Destination"
                    icon_left: "map-marker"

            MDRectangleFlatButton:
                id: destination_next_btn
                text: "Next"
                on_release:
                    app.root.current = "_destination_screen"  if  root.destination_details()["status"]=="error" else "_car_registration_screen"









